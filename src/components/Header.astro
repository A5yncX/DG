---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import LangLink from "./LangLink.astro";

import {useTranslations} from "../i18n/utils";
const { lang } = Astro.props;
const t = useTranslations(lang);

const homeSlug = `/${lang || ""}`;
const blogSlug = `/${lang || ""}/blog`;
const aboutSlug = `/${lang || ""}/about`;

const { pathname } = Astro.url;

// 添加一个变量以确定是否为文章页面
const isArticlePage = pathname.startsWith(blogSlug);

---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href={homeSlug}>{t("header.home")}</HeaderLink>
      <HeaderLink href={blogSlug}>{t("header.blog")}</HeaderLink>
      <HeaderLink href={aboutSlug}>{t("header.about")}</HeaderLink>
    </div>
    <!-- yuyan -->
    {/* 根据条件决定是否启用 */}
    {isArticlePage ? (
      <div class="internal-links-button">
        <a href="/zh/blog">zh</a>
      <a href="/en/blog">en</a>
      </div>
    ) : (
      <div class="internal-links-button">
        <LangLink language="zh" isActive={lang == "zh"} />
        <LangLink language="en" isActive={lang == "en"} />
      </div>
    )}
    <div class="social-links">
      <a href="https://github.com/A5yncX/DG" target="_blank">
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
    </div>
  </nav>
</header>
<style>

@media only screen and (max-width: 500px) {
	/* 在宽度小于等于600px的设备上应用以下样式 */
	/* 这里可以放置针对移动设备的样式设置 */
	header {
		display: none;
	  }
	
  }
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--bgc);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    /* border-bottom: 4px solid transparent; */
    text-decoration: none;
    font-weight: bolder;
  }
  nav a.active {
    /* text-decoration: bold; */
    color: var(--hc);
    font-weight: bolder;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }

</style>

---
import { getBlogPosts } from "../content/config";
import FormattedDate from "./FormattedDate.astro";

const { lang } = Astro.params;

export async function getData(lang) {
  const postf = await getBlogPosts();
  const filteredPosts = postf
    .filter((post) => post.data.lang === lang)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);
  return filteredPosts;
}

export async function getStaticPaths() {
  return ["zh", "en"].map((lang) => ({ params: { lang } }));
}

const postf = await getData(lang);
---

<ul data-pagefind-ignore="all">
    {postf.map((post) => (
      <li>
        <p class="date">
          <FormattedDate date={post.data.pubDate} />
        </p>
        <a href={`/${post.data.lang}/blog/${post.title}`}>
          <p class="title">{post.data.title}</p>
        </a>
      </li>
    ))}
</ul>
<style>
  main {
    width: 960px;
  }
  ul {
    /* display: flex; */
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li {
    display: flex;
    margin-top: 1rem;
  }
  ul li a {
    display: flex;
    font-family: var(--font-family-mono);
  }
  .title {
    margin: 0;
    line-height: 1;
  }
  .date {
    font-family: var(--font-family-mono);
    
    padding-right: 2rem;
    margin: 0;
    color: var(--gray);
  }

  /* 标题变色: */
  ul li a:hover {
    color: var(--accent);
    text-decoration: none;
  }
  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      display:inherit;
      width: 100%;
      /* text-align: center; */
    }

  }
</style>
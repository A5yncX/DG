---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./Layout.astro";
import Hr from"../components/Hr.astro"
import Comments from"../components/Comments.astro"
import Random from "../components/utils/Randomblogs.astro"

type Props = CollectionEntry<"blog">["data"];
const { title, description, pubDate, updatedDate, heroImage, lang, tags, categories, comments, random} = Astro.props; 

// Get current URL dynamically
const currentUrl = Astro.url.toString();
---

<Layout
  title={title}
  description={description}
  heroImage={heroImage}
  pubDate={pubDate}
  updatedDate={updatedDate}
  lang={lang}
>
  <article data-pagefind-body>
    <div class="prose">
      {!!categories?.length && (
        <div class="categories" style="font-family: var(--font-family-mono);">
          {categories.map((category, i) => (
            <>
              <a href={`/${lang}/categories/${category}`} class="taglink" data-pagefind-filter="category">#{category}</a>
              {i < categories.length - 1 && ""}
            </>
          ))}
        </div>
      )}
      <div class="title">
        <h1 style="text-align: center;">{title}</h1>
      </div>
      <div class="date" style="text-align: center;">
        {!!tags?.length && (
          <div class="tags" style="font-family: var(--font-family-mono);">
            {tags.map((tag, i) => (
              <>
                <a href={`/${lang}/tags/${tag}`} class="taglink" data-pagefind-filter="tag">{tag}</a>
                {i < tags.length - 1 && "|"}
              </>
            ))}
            <FormattedDate date={pubDate} />
          </div>
          
        )}
                <div id="like-count"> </div>
                <script>
                  // Ëé∑ÂèñÂΩìÂâçÁΩëÈ°µÁöÑ URL Âπ∂ÁºñÁ†Å
                  const currentUrl = encodeURIComponent(window.location.href);
                
                  // ÂÆö‰πâÁÇπËµûÊï∞ÈáèÊòæÁ§∫ÁöÑ DOM ÂÖÉÁ¥†
                  const likeCountElement = document.getElementById('like-count');
                
                  // ÂêéÁ´ØÊé•Âè£Âú∞ÂùÄ
                  const apiUrl = `https://likepost.asyncx0806.workers.dev/${currentUrl}/like`;
                
                  // Ëé∑ÂèñÁÇπËµûÊï∞ÈáèÂπ∂Êõ¥Êñ∞ DOM
                  async function fetchLikeCount() {
                    try {
                      // ‰ªéÂêéÁ´ØËé∑ÂèñÁÇπËµûÊï∞ÊçÆ
                      const response = await fetch(apiUrl, { headers: { Accept: 'application/json' } });
                      if (!response.ok) {
                        throw new Error(`Failed to fetch likes: ${response.statusText}`);
                      }
                
                      const data = await response.json(); // ÂÅáËÆæÂêéÁ´ØËøîÂõûÁöÑÊï∞ÊçÆÁªìÊûÑÁ±ª‰ºº‰∫éÔºö{ "‚ù§Ô∏è": 10, "üëç": 5 }
                      const totalLikes = Object.values(data).reduce((sum, count) => sum + count, 0); // ËÆ°ÁÆóÊÄªÁÇπËµûÊï∞Èáè
                
                      // Êõ¥Êñ∞È°µÈù¢ÊòæÁ§∫
                      likeCountElement.textContent = `‚ô•${totalLikes}`;
                    } catch (error) {
                      console.error('Error fetching like count', error);
                      likeCountElement.textContent = 'Failed to load likes.';
                    }
                  }
                
                  // Âú®È°µÈù¢Âä†ËΩΩÊó∂Ë∞ÉÁî® fetchLikeCount
                  window.addEventListener('DOMContentLoaded', fetchLikeCount);
                </script>
        <style>
          a.taglink {
            cursor: pointer!important;
          }
          .date {
            font-family: var(--font-family-mono);
            color: var(--gray);
          }
          .tags {
            text-align: center;
          }
          .categories {
            text-align: center;
          }
          .categories a {
            all: initial;
            color: #000;
            font-family: var(--font-family-mono);
            font-size: 1rem;
            transition: 0.2s ease-in-out;
            background-color: var(--hc);
            padding: 0.1rem 0.3rem 0.1rem 0.3rem;
            border-radius: 10px;
          }
          .categories a:hover {
            background-color: var(--accent);
            text-decoration: none;
            transition: 0.2s ease-in-out;
          }
          .tags a{
            all: initial;
            color: var(--fontc);
            font-family: var(--font-family-mono);
            font-size: 0.8rem;
            transition: 0.2s ease-in-out;
            text-decoration: none;
          }
          .tags a:hover {
            color: var(--hc);
            text-decoration: none;
            transition: 0.2s ease-in-out;
          }
        </style>
      </div>
      <Hr />
    <slot />
  </div>
    {random !== false && (
      <div class="random-container">
        <Random />
      </div>
    )}
    		<!-- Load the web component -->
	<script src="https://unpkg.com/open-heart-element" type="module"></script>
  <div class="like">
    
  </div>
	<!-- <open-heart href={`https://likepost.asyncx.top/?id=${encodeURIComponent(currentUrl)}`} emoji="‚ù§Ô∏è">‚ù§Ô∏è</open-heart> -->
	<!-- Fetch and update counts when the web component is loaded or clicked -->
	<script>
		window.customElements.whenDefined('open-heart').then(() => {
		  for (const oh of document.querySelectorAll('open-heart')) {
			oh.getCount()
		  }
		})
		// refresh component after click
		window.addEventListener('open-heart', e => {
			e && e.target && e.target.getCount && e.target.getCount()
		})
	</script>
    {comments !== false && <Comments />}
  </article>

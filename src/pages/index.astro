---
const {
	title,
	description,
	image = "/ogimage.png",
} = Astro.props;
---
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content="👋🏻Hi, I'm AX | i18n/Programming/Philosophy/Hobbies" />
<meta property="og:image" content={new URL(image, Astro.url)} />
<script>
	(function () {
	  var el = document.createElement('script');
	  el.setAttribute('src', 'https://umami.asyncx.top/umami');
	  el.setAttribute('data-website-id', '63c580ae-6084-4ea5-b219-c7d267237c09');
	  el.setAttribute('data-domains', 'blog.asyncx.top');
	  document.body.appendChild(el);
	})();
</script>
<body>
    <script>
      // 获取浏览器的语言设置
      const userLang = navigator.language || navigator.userLanguage;
      
      // 将语言设置转换为小写
      const lang = userLang.toLowerCase();
      
      // 根据浏览器语言进行重定向 //lang
      if (lang.startsWith('zh')) {
        window.location.href = '/zh';
      } else {
        window.location.href = '/en';
      }
    </script>
  </body>
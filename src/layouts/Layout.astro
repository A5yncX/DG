---
import Mouse from "../components/utils/BG/Mouse.astro";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import MobileHeader from "../components/MobileHeader.astro"; //移动端header
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { useTranslations, type UiType } from "../i18n/utils";
type Props = CollectionEntry<"blog">["data"];

const { title, description, lang } =
  Astro.props;

const t = useTranslations(lang as UiType);
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead lang={lang} title={title} description={description} />
    <script id="MathJax-script" async src="https://img.asyncx.top/hexo/js/mathjax.js"></script>
  </head>
  <body>
    <!-- <Mouse /> -->
    <Header title={t("site.title")} lang={lang} />
    <MobileHeader title={t("site.title")} lang={lang} />
    <main transition:animate="fade">
    <slot />
	</main>
    <Footer />
  </body>
</html>

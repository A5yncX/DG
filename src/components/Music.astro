<div class="music" style="display: none;">
    <iframe id="spotify-iframe" style="border-radius: 12px;" src="https://open.spotify.com/embed/track/1dRq7ThmExMWLOBoysVDfH?utm_source=generator&theme=0" width="100%" height="152" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
</div>

<script>
    // 等待文档加载完成后执行
    document.addEventListener('DOMContentLoaded', function() {
        // 获取iframe元素
        var iframe = document.getElementById('spotify-iframe');
        // 如果iframe存在
        if (iframe) {
            // 监听iframe的加载完成事件
            iframe.onload = function() {
                // 显示音乐容器
                var musicContainer = document.querySelector('.music');
                if (musicContainer) {
                    musicContainer.style.display = 'block';
                }
            };
        }
    });
</script>
